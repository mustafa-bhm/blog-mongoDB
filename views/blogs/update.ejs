<html lang="en">
  <%-include("../partials/head.ejs") %>
  <body>
    <% blog %> <%- include("../partials/nav.ejs") %>
    <div class="create-blog">
      <form action="/blogs/update/<%=blog.id %>" method="POST">
        <label for="title">Blog title:</label>
        <input
          type="text"
          id="title"
          name="title"
          required
          value="<%=blog.title %>"
        />

        <label for="snippet">Blog snippet:</label>
        <input
          type="text"
          id="snippet"
          name="snippet"
          required
          value="<%=blog.snippet%>"
        />

        <label for="image">Blog Image:</label>
        <input
          type="text"
          id="image"
          name="image"
          required
          value="<%= blog.image %>"
        />

        <label for="body">Blog body:</label>
        <textarea id="body" name="body" style="height: 300px" required>
<%= blog.body %></textarea
        >

        <button>EDIT</button>
      </form>
    </div>
  </body>
  <script></script>
  <%-include("../partials/footer.ejs") %>
</html>
