<!DOCTYPE html>
<html lang="en">
  <%-include("../partials/head.ejs") %>
  <body>
    <%-include("../partials/nav.ejs") %>
    <div class="blogs content">
      <h2>All Blogs</h2>
      <div class="blogs-container">
        <% if (blogs.length > 0){ %> <% blogs.forEach(element => { %>
        <div class="blog-card">
          <div>
            <img class="blog-image" src="<%= element.image %>" alt="" />
          </div>
          <div class="blog-right-side">
            <p><%= new Date( element.createdAt).toDateString() %></p>
            <h2 class="title"><%= element.title %></h2>
            <p class="snippet"><%= element.snippet %></p>
            <a class="read-more" href="/blogs/<%=element._id %>"
              >Read more ...</a
            >
          </div>
        </div>
        <% }); %> <% } else { %>
        <p>There are No blogs to display ...</p>
        <%} %>
      </div>
    </div>
  </body>
  <%-include("../partials/footer.ejs") %>
</html>
