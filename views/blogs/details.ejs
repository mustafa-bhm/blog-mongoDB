<html lang="en">
  <%-include("../partials/head.ejs") %>
  <body>
    <%- include("../partials/nav.ejs") %>
    <div class="details">
      <img class="blog-image" src="<%=blog.image %>" alt="" />
      <h2><%= blog.title %></h2>
      <div class="content">
        <p><%=blog.body %></p>
      </div>
      <p><%= new Date( blog.createdAt).toDateString() %></p>
      <a class="delete" title="delete this blog" data-doc="<%=blog._id %>">
        X</a
      >
    </div>
  </body>
  <%-include("../partials/footer.ejs") %>

  <script>
    const deleteBtn = document.querySelector("a.delete");
    deleteBtn.addEventListener("click", (e) => {
      const endpoint = `/blogs/${deleteBtn.dataset.doc}`;
      // to send delete request to /blogs/id
      fetch(endpoint, {
        method: "DELETE",
      })
        .then((response) => response.json())
        .then((data) => (window.location.href = data.redirect))
        .catch((err) => console.log(err));
    });
  </script>
</html>
